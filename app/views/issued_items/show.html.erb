<h1 class="text-center"><%= @issued_item.item.name %> - Issued to <%= @issued_item.employee.full_name %></h1>

<div class="container">
  <p><strong>Issue Date:</strong> <%= @issued_item.issue_date %></p>
  <p><strong>Return Date:</strong> <%= @issued_item.return_date %></p>

  <div class="mt-3">
    <% if current_user.admin? %>
      <%= link_to 'Return Item', issued_item_path(@issued_item), method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger btn-sm' %>
    <% end %>
    <%= link_to 'Back', issued_items_path, class: 'btn btn-secondary btn-sm' %>
  </div>
</div>
