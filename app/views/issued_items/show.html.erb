<%= form_with(model: @issued_item, local: true) do |form| %>
  <% if @issued_item.errors.any? %>
    <div class="alert alert-danger">
      <h4><%= pluralize(@issued_item.errors.count, "error") %> prohibited this item from being issued:</h4>
      <ul>
        <% @issued_item.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= form.label :returned_at, class: 'form-label' %>
    <%= form.date_field :returned_at, value: @issued_item.returned_at || Time.current.to_date, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= form.submit 'Deassign', class: 'btn btn-success mb-2' %>
  </div>
<% end %>
