<h1 class="text-center">Items List</h1>

<div class="mb-3">
  <% if current_user.admin? %>
    <%= link_to 'New Item', new_item_path, class: 'btn btn-primary' %>
  <% end %>
</div>

<table class="table table-striped table-bordered">
  <thead class="table-dark">
    <tr>
      <th>Item Name</th>
      <th>Description</th>
      <th>Quantity</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @items.each do |item| %>
      <tr>
        <td><%= item.name %></td>
        <td><%= item.description %></td>
        <td><%= item.quantity %></td>
        <td>
          <%= link_to 'Show', item_path(item), class: 'btn btn-info btn-sm' %>
          <% if current_user.admin? %>
            <%= link_to 'Edit', edit_item_path(item), class: 'btn btn-warning btn-sm' %>
            <%# <%= link_to 'Delete', item_path(item), method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger btn-sm' %> 
            <%# <%= button_to 'Delete', item_path(item), method: :delete, 
                          data: { confirm: 'Are you sure you want to delete this document?' }, 
                          class: "btn btn-danger" %>
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>